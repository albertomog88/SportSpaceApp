<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para BottomNavigationView -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item> <!-- Tamaño de los íconos -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewInactiveTextAppearance</item>
    </style>

    <!-- Apariencia del texto para elementos activos en la BottomNavigationView -->
    <style name="BottomNavigationViewActiveTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item> <!-- Tamaño del texto activo -->
        <item name="itemTextColor">@color/buttonsTextColor</item> <!-- Color del texto activo, define este color en colors.xml -->
        <item name="itemIconTint">@color/buttonsTextColor</item>
    </style>

    <!-- Apariencia del texto para elementos inactivos en la BottomNavigationView -->
    <style name="BottomNavigationViewInactiveTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item> <!-- Tamaño del texto inactivo -->
        <item name="itemTextColor">@color/ambar</item> <!-- Color del texto inactivo, define este color en colors.xml -->
        <item name="itemIconTint">@color/ambar</item>
    </style>

    <!-- Apariencia del texto para el nombre de la app -->
    <style name="TituloMarca" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFA000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">audiowide</item>
    </style>

    <!-- Apariencia del texto para titulos de pantalla -->
    <style name="TitulosGenericos" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#CFD8DC</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">audiowide</item>
    </style>

    <!-- Apariencia del texto para la mayoría de los botones de la app -->
    <style name="BotonesApp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#455A64</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">amiko_bold</item>
    </style>

</resources>