<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gris"
    tools:context="Presentacion.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil de Usuario"
            android:textColor="@color/ambar"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mailUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/amiko_bold"
            android:textColor="@color/lightBlue"
            android:text="Email" />

        <TextView
            android:id="@+id/nombreApeUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/amiko_bold"
            android:textColor="@color/lightBlue"
            android:text="Nombre Completo" />

        <TextView
            android:id="@+id/fechNacUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/amiko_bold"
            android:textColor="@color/lightBlue"
            android:text="Fecha Nac" />

        <Button
            android:id="@+id/cierreSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cerrar Sesion"
            android:textColor="@color/buttonsTextColor"
            android:textSize="25dp"
            android:fontFamily="@font/amiko_bold"
            app:backgroundTint="#FFC107"/>
    </LinearLayout>
</FrameLayout>